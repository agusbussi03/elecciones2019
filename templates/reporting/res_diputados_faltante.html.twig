{% extends "layout.html.twig" %}
{% block content %}
    <meta http-equiv="refresh" content="120">

    {#% include "navigator.html.twig" %#}
    <div {#class="container"#}>
        <div>
            <div style='width: 65%;float: left'>
                <h1 class="page-header">Diputados  - FALTANTE</h1>
                <b>Ultima actualizaci&oacute;n: {{config.ultimaactualizacion('D')}}
                - Avance: {{config.avancediputados(1)}}%</b>
            </div>
            <div style='float: right;width:35%'>
             <button type="button" class="btn btn-sm btn-default"
                        onclick="window.location.href = '{{ path('rep_provincia') }}';">Home</button>
            </div>
        </div>
        <div style="clear: both;height:10px;"></div>
            <div {#class="row"#}>
                  {% for item in faltantes %}
                {%if item.faltantes|length>0%} 
                    <br><hr>
                    <b>{{item.nombre}}</b>
                     <table width="1000px" border="1">
                    {% for item2 in item.faltantes %}   
                            <tr  id="r_{{loop.index}}">
                                <td  width=10px style="width:10px;text-align: right">
                                    {{ item2.numero }}
                                </td> 
                                <td style="width:100px;">
                                    {{ item2.responsable }}
                                </td> 
                                <td style="width:100px;">
                                    {{config.localmesa(item2.numero)}}{{config.responsablelocalmesa(item2.numero)}}
                                </td> 
                            </tr>
                    {% endfor %}  
                     </table>
                {%endif%}
            {% endfor %}
            </div>
        </div>

        {% endblock %}    
            {% block final %}
            {% endblock %}


