{% extends "layout.html.twig" %}
{% block content %}
    {% include "navigator.html.twig" %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">FISCALES - Departamentos</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">

                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in secciones%}
                                        <tr class="odd gradeX">
                                            <td>{{item.nomb}}</td>
                                            <td> 
                                                <button type="button" class="btn btn-outline btn-primary btn-sm" onclick="window.location.href = '{{ path('fiscales_circuito',{'id':item.sec}) }}';">Ciudades</button>
                                                <button type="button" class="btn btn-outline btn-primary btn-sm" onclick="window.location.href = '{{ path('fiscales_seccion')}}?print&seccion={{item.sec}}';">Imprimir</button>
                                           </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}    
            {% block final %}
                <!-- DataTables JavaScript -->
                <script src="{{ asset('/vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
                <script src="{{ asset('/vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
                <script src="{{ asset('vendor/datatables-responsive/dataTables.responsive.js') }}"></script>
                <script>
                                                    $(document).ready(function () {
                                                        $('#dataTables-example').DataTable({
                                                            responsive: true
                                                        });
                                                    });
                </script>
            {% endblock %}
