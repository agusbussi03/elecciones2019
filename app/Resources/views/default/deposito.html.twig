{% extends "base.html.twig" %}

{% block body %}
    <h1 class="page-header">Informar dep贸sito</h2>
     <div class="row">
        <div class="col-lg-6">
    
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
        </div>
     </div>
    <script src={{asset("vendor/jquery/jquery.min.js")}}></script>

    <h2 class="panel-default">Dep贸sitos</h2>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Historial de depositos
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Fecha del Dep贸sito</th>
                                    <th>Detalle</th>
                                    <th>Monto</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for transferencia in transferencias%}
                                    <tr>
                                        <td>{{transferencia.fecha|date('d/m/Y')}}</td>
                                        <td>{{transferencia.detalle}}</td>
                                        <td>{{transferencia.importe}}</td>
                                        <td>{%if transferencia.confirmacion is empty %}
                                            No confirmado
                                            {%else%}
                                                {{transferencia.confirmacion|date('d/m/Y')}}
                                            {%endif%}
                                        </td>
                                    </tr>
                                {%endfor%}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

 <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Se van a informar un dep贸sito por <span id="cantidad"></span> pesos.<br>
                    Desea continuar?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="save_changes">Continuar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("form[name$='form']").on('submit', function (event) {
                $("#cantidad").html($("#form_importe").val());
                $('#myModal').modal('show');
                event.preventDefault();
            });
            $("#save_changes").click(function (event) {
                $("form[name$='form']").unbind('submit');
                $("form[name$='form']").submit();
            });
        });
    </script>


{% endblock body %}