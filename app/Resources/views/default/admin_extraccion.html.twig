{% extends "base_admin.html.twig" %}

{% block body %}
    <h1 class="page-header">Extracciones / Cotizacion actual: {{helpers.cotizacionARS_BTC.bpi.USD.rate_float|number_format(2,',','.')}}</h2>
    <script src={{asset("vendor/jquery/jquery.min.js")}}></script>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Usuario</th>
                                    <th>Detalle</th>
                                    <th>Monto</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for transferencia in transferencias%}
                                    <tr>
                                        <td>{{transferencia.fecha|date('d/m/Y')}}</td>
                                        <td>{{transferencia.cuenta.fosUser.Username}}</td>
                                        <td>{{transferencia.detalle}}</td>
                                        <td align="right">{{transferencia.importe|number_format(2,',','.')}}</td>
                                        <td>
                                            {%if transferencia.estado != 1 and transferencia.estado != 2%}Pendiente {%endif%}
                                            {%if transferencia.estado == 1 %}Confirmado - {%endif%}
                                            {%if transferencia.estado == 2 %}Denegado - {%endif%}

                                            {%if transferencia.confirmacion is not empty %}
                                                {{transferencia.confirmacion|date('d/m/Y')}}
                                            {%endif%}
                                        </td>
                                        <td> {%if transferencia.confirmacion is  empty %}
                                            <a href="{{ url('adminextraccionesoperacion', { operacion: 'denegar' ,id: transferencia.id}, true) }}" class="btn btn-danger" role="button">Denegar</a>
                                            <a href="{{ url('adminextraccionesoperacion', { operacion: 'aprobar' ,id: transferencia.id}, true) }}" class="btn btn-info" role="button">Aprobar</a>
                                            
                                            <p>Comision: {{(transferencia.importe*0.0015)|number_format(2,',','.')}}$ </p>
                                        </td>
                                        {%endif%}
                                        </tr>
                                        {%endfor%}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                {% endblock body %}