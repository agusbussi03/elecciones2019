{% extends "base.html.twig" %}

{% block body %}
     <script src={{asset("vendor/jquery/jquery.min.js")}}></script>
    <h1 class="page-header">Comprar Bitcoins</h2>


    <div class="row">
        <div class="col-lg-12">

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <br>
            <div class="alert alert-success">
                Disponible para operar: {{cuenta.saldo|number_format(2,',','.')}} - Cotizaci√≥n aproximada: $ {{helpers.cotizacionARS_BTC.bpi.ARS.rate_float|number_format(2,',','.')}}
                / U$S {{helpers.cotizacionARS_BTC.bpi.USD.rate_float|number_format(2,',','.')}}
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Se van a adquirir <span id="cantidad"></span> pesos a una cotizacion aproximada de
                    {{helpers.cotizacionARS_BTC.bpi.ARS.rate_float|number_format(2,',','.')}}.<br>
                    Desea continuar con la compra??
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="save_changes">Continuar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $("form[name$='form']").on('submit',function (event) {
                 $("#cantidad").html($("#form_origen_importe").val());
                    $('#myModal').modal('show');
                    event.preventDefault();
            });
            $("#save_changes").click(function (event) {
               $("form[name$='form']").unbind('submit');
                $("form[name$='form']").submit();
            });
        });
    </script>

{% endblock body %}

